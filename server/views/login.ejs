<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: 'Helvetica Neue', sans-serif;
      background: linear-gradient(to right, #fef3e6, #ffffff);
      min-height: 100vh;
    }

    .main-container {
      display: flex;
      flex-direction: row;
      min-height: 100vh;
      width: 100%;
    }

    .login-left,
    .login-right {
      width: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
    }

    .login-left {
      background-color: #fff;
    }

    .login-right {
      background-color: #fef3e6;
    }

    .login-right img {
      max-width: 100%;
      height: auto;
    }

    .login-form-card {
      width: 100%;
      max-width: 420px;
      background-color: #fff;
      padding: 35px 30px;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .brand {
      color: #fc8019;
      font-weight: bold;
      font-size: 32px;
      margin-bottom: 16px;
      text-align: center;
    }

    .form-label {
      font-weight: 500;
      color: #2f1601;
    }

    .form-control {
      border-radius: 12px;
      padding: 12px;
      font-size: 15px;
    }

    .btn-orange {
      background-color: #fc8019;
      border: none;
      color: white;
      padding: 12px;
      font-weight: 600;
      border-radius: 12px;
      width: 100%;
    }

    .btn-orange:hover {
      background-color: #e56d00;
    }

    .auth-links {
      font-size: 14px;
      text-align: center;
      margin-top: 20px;
    }

    .auth-links a {
      color: #666;
      text-decoration: none;
    }

    .auth-links a:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .main-container {
         padding-bottom: 50px;
      }

      .login-left,
      .login-right {
        width: 100%;
      }

      .login-right {
        order: 1;
        padding: 20px;
      }

      .login-left {
        order: 2;
        /* padding: 20px; */
        display: none;
      }
    }
  </style>
</head>
<body>

  <div class="main-container">
    <!-- RIGHT: IMAGE -->
    <div class="login-left">
      <img src="/images/login-illustration.webp" alt="Login illustration" />
    </div>

    <!-- LEFT: FORM -->
    <div class="login-right">
      <div class="login-form-card">
        <div class="brand">Swiggy</div>
        <h5 class="text-center mb-4">Welcome back! Login to continue</h5>

        <!-- Flash messages -->
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <form method="POST" action="/login">
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="enter@email.com" />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="********" />
          </div>
          <button type="submit" class="btn btn-orange">Login</button>
        </form>

        <div class="auth-links mt-4">
          <p><a href="/forgotPassword">Forgot Password?</a></p>
          <p><a href="/register-view">Don't have an account? Sign up</a></p>
        </div>
      </div>
    </div>
  </div>

 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Auto dismiss alerts after 3 seconds
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
        bsAlert.close();
      });
    }, 500);
  </script>
</body>
</html>
