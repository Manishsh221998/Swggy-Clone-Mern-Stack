<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background: linear-gradient(to right, #fef3e6, #ffffff);
      font-family: 'Helvetica Neue', sans-serif;
      height: 100vh;
    }

    .main-container {
      display: flex;
      height: 100%;
      width: 100%;
    }

    .register-left {
      width: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
      background-color: #fff;
    }

    .register-form-card {
      width: 100%;
      max-width: 520px;
      background-color: #fff;
      padding: 35px 30px;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .brand {
      color: #fc8019;
      font-weight: bold;
      font-size: 32px;
      margin-bottom: 16px;
      text-align: center;
    }

    .form-label {
      font-weight: 500;
      color: #2f1601;
      margin-bottom: 6px;
    }

    .form-control {
      border-radius: 12px;
      padding: 12px;
      font-size: 15px;
    }

    .btn-orange {
      background-color: #fc8019;
      border: none;
      color: white;
      padding: 12px;
      font-weight: 600;
      border-radius: 12px;
      width: 100%;
    }

    .btn-orange:hover {
      background-color: #e56d00;
    }

    .auth-links {
      font-size: 14px;
      text-align: center;
      margin-top: 20px;
    }

    .auth-links a {
      color: #666;
      text-decoration: none;
    }

    .auth-links a:hover {
      text-decoration: underline;
    }

    .register-right {
      width: 50%;
      background-color: #fef3e6;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
    }

    .register-right img {
      max-width: 100%;
      height: auto;
    }

    @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
      }

      .register-left{
display: none;
      }
      .register-right {
        width: 100%;
      }

      .register-right {
        display:block;
      }
    }
  </style>
</head>

<body>

  

  <div class="main-container">
    <!-- Left: Form -->
    <div class="register-right">
      <div class="register-form-card">
        <div class="brand">Swiggy</div>
        <h5 class="text-center mb-4">Create your account</h5>

 <!-- Flash messages -->
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <%= error_msg %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        <!-- ---------- -->

        <hr>

        <form method="POST" action="/register" enctype="multipart/form-data">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label" for="name">Username</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Enter your username" />
            </div>

            <div class="col-md-6">
              <label class="form-label" for="roleDropdown">Select Role</label>
              <div class="dropdown">
                <button class="btn btn-light dropdown-toggle form-control text-start" type="button" id="roleDropdown"
                  data-bs-toggle="dropdown" aria-expanded="false">
                  Select a role
                </button>
                <ul class="dropdown-menu w-100" aria-labelledby="roleDropdown">
                  <% roles.slice(1).forEach(role => { %>
                    <li><a class="dropdown-item role-option" href="#" data-value="<%= role._id %>">
                      <%= role.name %>
                    </a></li>
                  <% }) %>
                </ul>
                <input type="hidden" name="roleId" id="selectedRoleId" />
              </div>
            </div>

            <div class="col-md-6">
              <label class="form-label" for="email">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" />
            </div>

            <div class="col-md-6">
              <label class="form-label" for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" />
            </div>

            <div class="col-md-12">
              <label class="form-label" for="image">Profile Image</label>
              <input type="file" class="form-control" id="image" name="image" accept="image/*" />
            </div>

            <div class="col-12 mt-3">
              <button type="submit" class="btn btn-orange">Register</button>
            </div>
          </div>
        </form>

        <div class="auth-links mt-4">
          <p><a href="/forgotPassword">Forgot Password?</a></p>
          <p><a href="/login-view">Already have an account? Login!</a></p>
        </div>
      </div>
    </div>

    <!-- Right: Illustration -->
    <div class="register-left">
      <img src="" alt="Register illustration" />
    </div>
  </div>

  <script>
    document.querySelectorAll('.role-option').forEach(item => {
      item.addEventListener('click', function (e) {
        e.preventDefault();
        const selectedText = this.textContent;
        const selectedValue = this.getAttribute('data-value');

        document.getElementById('roleDropdown').textContent = selectedText;
        document.getElementById('selectedRoleId').value = selectedValue;
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Auto dismiss alerts after 3 seconds
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
        bsAlert.close();
      });
    }, 500);
  </script>
</body>

</html>
